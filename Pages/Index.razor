@using Agenda.Model


@page "/"

<h1>Agenda</h1>

<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Heure</th>
            <th>Titre</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var monevent in events)
        {
<tr>
                <td>@monevent.Date.ToShortDateString()</td>
                <td>@monevent.Time.Hours:@monevent.Time.Minutes</td>
                <td>@monevent.Title</td>
                <td>@monevent.Description</td>
            </tr>
        }

    </tbody>
</table>

@code {
    List<Event> events = new List<Event>();

    protected override void OnInitialized()
    {
    // Remplir la liste avec des données factices
    events.Add(new Event() { Date = new DateTime(2022, 1, 1), Time = new TimeSpan(10, 0, 0), Title = "Réunion", Description = "Réunion de travail" });
    events.Add(new Event() { Date = new DateTime(2022, 1, 2), Time = new TimeSpan(14, 0, 0), Title = "Anniversaire", Description = "Anniversaire de ma mère" });
    events.Add(new Event() { Date = new DateTime(2022, 1, 3), Time = new TimeSpan(16, 0, 0), Title = "Cinéma", Description = "Aller voir un film" });
    }
}